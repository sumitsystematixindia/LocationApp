<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="?attr/actionBarSize"
    tools:context=".activity.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="340dp"
            android:scaleType="fitXY"
            android:src="@drawable/header_up" />

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="Traverse Path"
            android:textColor="@color/white"
            android:textSize="35dp" />



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/tv_login"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="20dp"
                android:clickable="true"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/fragment_shap"
                    android:orientation="vertical">
                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none"
                    >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginRight="16dp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="12dp"
                            android:layout_weight="1"
                            android:clickable="true"
                            app:cardBackgroundColor="@color/traversepath_campus"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="1dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:backgroundTint="@null"
                                android:orientation="vertical">

                                <ImageView

                                    android:layout_width="30dp"
                                    android:layout_height="60dp"
                                    android:layout_below="@+id/tv_login"
                                    android:layout_gravity="center_horizontal"
                                    android:src="@drawable/icon_campus" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/traversepath_campus1" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginBottom="8dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="2dp"
                                        android:gravity="center"
                                        android:text="CAMPUS"
                                        android:textColor="@color/traversepath_campus1"
                                        android:textSize="8sp" />

                                    <TextView
                                        android:id="@+id/txtcampus"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="2dp"
                                        android:gravity="center"
                                        android:text="Campus 1"
                                        android:textColor="@color/traversepath_campus1"
                                        android:textSize="8sp" />
                                </LinearLayout>
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="12dp"
                            android:layout_weight="1"
                            android:clickable="true"
                            app:cardBackgroundColor="@color/traversepath_facility1"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="1dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:backgroundTint="@null"
                                android:orientation="vertical">

                                <ImageView

                                    android:layout_width="30dp"
                                    android:layout_height="60dp"
                                    android:layout_below="@+id/tv_login"
                                    android:layout_gravity="center_horizontal"
                                    android:src="@drawable/icon_facility" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/traversepath_facilityview1" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginBottom="8dp"
                                    android:orientation="vertical">

                                    <TextView

                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="2dp"
                                        android:gravity="center"
                                        android:text="FACILITY"
                                        android:textColor="@color/traversepath_facilityview3"
                                        android:textSize="8sp" />

                                    <TextView
                                        android:id="@+id/txtfacility"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="2dp"
                                        android:gravity="center"
                                        android:text="Facility 1"
                                        android:textColor="@color/traversepath_facilityview3"
                                        android:textSize="8sp" />
                                </LinearLayout>
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginRight="16dp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="12dp"
                            android:layout_weight="1"
                            android:clickable="true"
                            app:cardBackgroundColor="@color/traversepath_floor"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="1dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:backgroundTint="@null"
                                android:orientation="vertical">

                                <ImageView

                                    android:layout_width="30dp"
                                    android:layout_height="60dp"
                                    android:layout_below="@+id/tv_login"
                                    android:layout_gravity="center_horizontal"
                                    android:src="@drawable/icon_floor" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/traversepath_floorview" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginBottom="8dp"
                                    android:orientation="vertical">

                                    <TextView

                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="2dp"
                                        android:gravity="center"
                                        android:text="FLOOR"
                                        android:textColor="@color/traversepath_floorview1"
                                        android:textSize="8sp" />

                                    <TextView
                                        android:id="@+id/txtfloor"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="2dp"
                                        android:gravity="center"
                                        android:text="Floor 1"
                                        android:textColor="@color/traversepath_floorview1"
                                        android:textSize="8sp" />
                                </LinearLayout>
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="12dp"
                            android:layout_weight="1"
                            android:clickable="true"
                            app:cardBackgroundColor="@color/traversepath_building"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="1dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:backgroundTint="@null"
                                android:orientation="vertical">

                                <ImageView

                                    android:layout_width="30dp"
                                    android:layout_height="60dp"
                                    android:layout_below="@+id/tv_login"
                                    android:layout_gravity="center_horizontal"
                                    android:src="@drawable/icon_building" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/traversepath_buildingview" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginBottom="8dp"
                                    android:orientation="vertical">

                                    <TextView

                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="2dp"
                                        android:gravity="center"
                                        android:text="BUILDING"
                                        android:textColor="@color/traversepath_buildingview"
                                        android:textSize="8sp" />

                                    <TextView
                                        android:id="@+id/txtBuilding"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="2dp"
                                        android:gravity="center"
                                        android:text="Building 1"
                                        android:textColor="@color/traversepath_buildingview2"
                                        android:textSize="8sp" />
                                </LinearLayout>
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="35dp"
                        android:gravity="center_horizontal"
                        android:text="Start Your Test"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="Select the test type"
                        android:textColor="@color/light_black"
                        android:textSize="18dp" />

                    <Button
                        android:id="@+id/btn_intermittent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/shape"
                        android:gravity="center"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:text="Intermittent Stops"
                        android:textAllCaps="false"
                        android:textSize="18dp"
                        app:backgroundTint="@null"
                        app:layout_constraintTop_toBottomOf="@+id/tv_disc" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="OR"
                        android:textColor="@color/black"

                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/btn_continiue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/shape"
                        android:gravity="center"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:text="Continuous Path"
                        android:textAllCaps="false"
                        android:textSize="18dp"
                        app:backgroundTint="@null"
                        app:layout_constraintTop_toBottomOf="@+id/tv_disc" />

                </LinearLayout>
                </androidx.core.widget.NestedScrollView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

    </RelativeLayout>

</RelativeLayout>