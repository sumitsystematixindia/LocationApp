<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/navigation_ins_RL"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:alpha="0.85"
    android:orientation="horizontal">

    <!-- android:background="@drawable/whiteshape" -->

    <ImageView
        android:id="@+id/navigation_ins_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:id="@+id/navigation_ins_texts_linearlayout"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/navigation_ins_textview"
            android:layout_width="230dp"
            android:layout_height="22dp"
            android:layout_gravity="right"
            android:textSize="17dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/navigation_ins_poi_textview"
            android:layout_width="230dp"
            android:layout_height="44dp"
            android:layout_gravity="right"
            android:minLines="2"
            android:textSize="17dp"
            android:textStyle="bold" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/navigation_ins_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY" />
    </RelativeLayout>

</RelativeLayout>